<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepage_back"
    tools:context=".login">

    <Button
        android:id="@+id/loginbutton"
        android:backgroundTint="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgotbutton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="141dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="182dp"
        android:text="GO"
        app:layout_constraintTop_toBottomOf="@+id/forgotbutton"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteX="194dp" />

    <TextView
        android:id="@+id/forgotbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginpassword"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="20dp"
        android:text="Forgot Password?"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="258dp"
        tools:layout_editor_absoluteY="397dp" />

    <TextView
        android:id="@+id/gotosignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginbutton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="149dp"
        android:text="NEW USER? SIGN UP"
        app:layout_constraintTop_toBottomOf="@+id/loginbutton"

        tools:ignore="MissingConstraints,OnClick"
        tools:layout_editor_absoluteX="167dp" />


    <EditText
        android:id="@+id/loginemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="62dp"
        android:ems="10"
        android:hint="Enter username"
        android:inputType="textEmailAddress"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="226dp" />

    <EditText
        android:id="@+id/loginpassword"
        android:layout_width="201dp"
        android:layout_height="38dp"
        android:layout_below="@+id/loginemail"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="68dp"
        android:ems="10"
        android:hint="Enter password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="311dp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="221dp"
        android:text="Sign In to continue"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="95dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:text="         Predicting Your Diabetes"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"></TextView>

    <TextView
        android:layout_width="170sp"
        android:layout_height="170dp"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:text="One step closer to"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"></TextView>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView18"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="49dp"
        android:text="Email"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="236dp" />

    <TextView
        android:id="@+id/textView005"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView16"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="44dp"
        android:text="Password"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="236dp" />
</RelativeLayout>